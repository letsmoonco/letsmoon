

<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title darker" id="feedbackModalCenterTitle">Feedback</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>      
      <div class="modal-body">
        <p class="darker">Please give us some feedback.</p>  
        <form id="feedbackForm" action="/feedback" method="POST">

  			<div class="form-check form-check-inline">
  			  <input class="form-check-input" type="radio" name="feedbackradio" id="feedbackradio1" value="Feature Request" checked>
  			  <label class="form-check-label" for="feedbackradio1">
  			    Feature Request
  			  </label>
  			</div>
  			<div class="form-check form-check-inline">
  			  <input class="form-check-input" type="radio" name="feedbackradio" id="feedbackradio2" value="Bug Report">
  			  <label class="form-check-label" for="feedbackradio2">
  			    Bug Report
  			  </label>
  			</div>
  			<div class="form-check form-check-inline">
  			  <input class="form-check-input" type="radio" name="feedbackradio" id="feedbackradio3" value="Question">
  			  <label class="form-check-label" for="feedbackradio3">
  			    Question
  			  </label>
  			</div>			
      		<textarea class="form-control top-pad3" id="feedbacktxt" name="feedbacktxt" rows="5" placeholder="Feedback"></textarea>
      		<input type="hidden" class="form-control" name="feedbackroute" id="feedbackroute">			  
        </form>                
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success feedback-submit">Submit</button>
      </div>
    </div>
  </div>
</div>  


<script>

  $(function () {
    $('body').on('click', '.feedback-submit', function (e) {
    	
    	  $('#feedbackroute').val(window.location.pathname);
        $('#feedbackForm').submit();
        $('#feedbackModal').modal('hide');

    });
  });


</script>